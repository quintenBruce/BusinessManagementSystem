            <div class="row w-100">
                <div class="col-12 col-sm-6 col-lg-12 mobile-only-title">
                    <p>Payment</p>
                </div>
                <div class="col-12 col-sm-5 col-lg-12">
                    <textarea asp-for="PaymentDescriptions[i]" rows="1" type="text" class="mt-2 mb-2 order-details-product-info-input-active product-name new-product-property" placeholder="Payment Info" form="edit-template-form"></textarea>
                </div>
            </div>
        </div>
        <div class="col-lg-2 d-flex align-items-center pb-3 pb-lg-0">
            <div class="row w-100">
                <div class="col-12 col-sm-6 mobile-only-title">
                    <p>Cost</p>
                </div>
                <div class="col-12 col-sm-5 col-lg-12">
                    <input asp-for="PaymentUnitCosts[i]" class="order-details-product-info-input-active product-dimensions new-product-property" placeholder="Cost" form="edit-template-form">
                </div>
            </div>
        </div>
        <div class="col-lg-2 d-flex align-items-center pb-3 pb-lg-0">
            <div class="row w-100">
                <div class="col-12 col-sm-6 col-lg-12 mobile-only-title">
                    <p>QTY</p>
                </div>
                <div class="col-12 col-sm-5 col-lg-12">
                    <input asp-for="PaymentQTYs[i]" class="order-details-product-info-input-active product-dimensions new-product-property" placeholder="QTY" form="edit-template-form" form="edit-template-form">
                </div>
            </div>
        </div>
        <div class="col-lg-2 d-flex align-items-center pb-3 pb-lg-0">
            <div class="row w-100">
                <div class="col-12 col-sm-6 col-lg-12 mobile-only-title">
                    <p>Amount</p>
                </div>
                <div class="col-12 col-sm-5 col-lg-12">
                    <input asp-for="PaymentAmounts[i]" type="text" class="order-details-product-info-input-active product-dimensions new-product-property" placeholder="Amount" form="edit-template-form">
                </div>
            </div>
        </div>
    </div>
    }

    <div class="row m-0 mt-2">
        <div id="button-row" class="row mb-2 mt-2 d-flex flex-row">
            <div class="col-5 d-flex justify-content-start">
                <input id="order-input-submit" type="submit" value="Generate Invoice" class="btn btn-primary-2"  form="edit-template-form">
            </div>
        </div>
    </div>
</div>
