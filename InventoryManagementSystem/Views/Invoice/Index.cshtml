    <h4 class="p-3">Payment Information</h4>
    <div id="create-order-product-information-header-row" class="row">
        <div class="col-6">
            <h4 class="order-table-header-item">Payment</h4>
        </div>
        <div class="col-2">
            <h4 class="order-table-header-item">Cost</h4>
        </div>
        <div class="col-2">
            <h4 class="order-table-header-item">QTY</h4>
        </div>
        <div class="col-2">
            <h4 class="order-table-header-item">Amount</h4>
        </div>
    </div>
    @for (int i = 0; i < Model.PaymentDescriptions.Count; i++)
