@model InventoryManagementSystem.ViewModels.LoginViewModel;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<body style="background-image: linear-gradient(to right top, #7892b9, #6483be, #5672c1, #5060c2, #544bbe);">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem; border-style: solid;border-color: #3c498e;border-width: 5;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">James, Please enter your login and password!</p>    
                            <div class="form-outline form-white mb-4">
                                <input asp-for="UserName" class="form-control form-control-lg" placeholder="Enter a valid username"/>
                                <label asp-for="UserName"class="form-label"></label>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter a valid Password"/>
                                <label asp-for="Password" class="form-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5 mb-5" type="submit">Login</button>
                            <p class=""><a class="text-white-50" asp-action="ForgotPassword">Forgot password?</a></p>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>



</body>
