@model InventoryManagementSystem.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>



<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Register a new admin account</h2>

              <form asp-controller="Account" asp-action="Register" method="post" role="form">

                <div class="form-outline mb-4">
                  <span asp-validation-for="Email" class="text-danger"></span>
                  <input asp-for="Email" class="form-control form-control-lg" />
                  <label asp-for="Email" class="form-label"></label>

                </div>

                <div class="form-outline mb-4">
                  <span asp-validation-for="UserName" class="text-danger"></span>
                  <input asp-for="UserName" class="form-control form-control-lg" />
                  <label asp-for="UserName" class="form-label"></label>
                  
                </div>

                <div class="form-outline mb-4">
                  <span asp-validation-for="Password" class="text-danger"></span>
                  <input asp-for="Password" class="form-control form-control-lg" />
                  <label asp-for="Password" class="form-label"></label>
                </div>

                <div class="form-outline mb-4">
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                  <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                  <label asp-for="ConfirmPassword" class="form-label"></label>
                </div>

               

                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                </div>

                

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

