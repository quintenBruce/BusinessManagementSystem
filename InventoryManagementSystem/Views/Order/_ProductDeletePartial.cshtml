@model InventoryManagementSystem.Models.Product



<form id="product-delete" action="/Product/DeleteProduct" data-ajax="true" data-ajax-method="post"  data-ajax-update="#product-information-container" data-ajax-mode="replace" data-ajax-success="productUpdate">


<input type="hidden" name="productIndex" value=@ViewData["ProductIndex"] />
<input type="hidden" name="productId" value="@Model.Id" />
<button class="btn btn-light order-table-button"  type="submit" onclick="return confirm('Are you sure you want to delete this product from this order?')"><i class="fa-regular fa-trash-can" style="color: black;"></i></button>

</form> 