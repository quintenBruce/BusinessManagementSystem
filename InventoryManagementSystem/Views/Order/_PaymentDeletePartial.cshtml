@model InventoryManagementSystem.Models.Payment





<form id="payment-delete-form" action="/Payment/DeletePayment" data-ajax="true" data-ajax-method="post" data-ajax-update="#payment-information-container" data-ajax-mode="replace" data-ajax-success="paymentUpdate">

<input type="hidden" name="paymentId" value="@Model.Id" />
<input type="hidden" name="orderId" value=@(ViewData["orderId"]) />
<button class="btn btn-light order-table-button" type="submit" onclick="return confirm('Are you sure you want to delete this payment from this order?')"><i class="fa-regular fa-trash-can" style="color: black;"></i></button>


</form>
